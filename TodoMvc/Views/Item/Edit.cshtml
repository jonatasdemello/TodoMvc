@model TodoMvc.Models.TodoItemModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Task</h2>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="Id" class="col-sm-2 col-form-label">Id</label>
                <div class="cols-sm-10">
                    <input type="hidden" asp-for="Id" />
                     @Html.DisplayFor(model => model.Id)
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ItemName" class="col-sm-2 col-form-label">Task Name</label>
                <div class="cols-sm-10">
                    <input asp-for="ItemName" class="form-control" />
                    <span asp-validation-for="ItemName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Priority" class="col-sm-2 col-form-label">Task Priority</label>
                <div class="cols-sm-10">
                    <input asp-for="Priority" class="form-control" />
                    <span asp-validation-for="Priority" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="IsCompleted" class="col-sm-2 col-form-label">Completed?</label>
                <div class="cols-sm-10">
                    <input class="form-control" asp-for="IsCompleted" />
                </div>
            </div>


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <hr />
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
